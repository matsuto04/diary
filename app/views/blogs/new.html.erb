<%= form_with(model: @blog, local: true) do |form| %>

  <div class="title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="start_time">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  <div>

  <div class="content">
    <%= form.label :text %>
    <%= form.text_field :text %>
  </div>

  <div class="submit">
    <%= form.submit '送信' %>
  </div>
<% end %>